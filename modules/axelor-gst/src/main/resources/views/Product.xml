<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.1.xsd">

	<grid model="com.axelor.gst.db.Product" title="Product"	name="product-grid">
		<field name="image" title="Image" widget="image" />
		<field name="name" title="Name" />
		<field name="code" title="Code" />
		<field name="hsbn" title="HSBN" />
		<field name="category" title="Category"/>
		<field name="salePrice" title="Sale Price" />
		<field name="costPrice" title="Cost Price" />
		<field name="gstRate" title="GST Rate"/>
	</grid>

	<form model="com.axelor.gst.db.Product" title="Product"	name="product-form">
		<panel colSpan="12">
			<panel colSpan="4">
				<field name="image" showTitle="false" colSpan="12" widget="image" />
			</panel>
			<panel colspan="8">
				<field name="name" required="true" />
				<field name="code" required="true"/>
				<field name="hsbn" />
				<field name="category" onChange="action-product-attr-set-gstrate"/>
				<field name="salePrice" />
				<field name="costPrice"/>
				<field name="gstRate"/>				
			</panel>
		</panel>
	</form>
	
	<action-attrs name="action-product-attr-set-gstrate">
		<attribute name="value:set" for="gstRate" expr="eval: category.gstRate" />
	</action-attrs>
	
</object-views>